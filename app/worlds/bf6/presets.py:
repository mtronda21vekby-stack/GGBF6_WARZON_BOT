# app/worlds/bf6/presets.py
from __future__ import annotations

from typing import Dict, Any


def _p(profile: Dict[str, Any], key: str, default: str) -> str:
    v = (profile or {}).get(key)
    return str(v) if v not in (None, "") else default


def bf6_class_text(profile: Dict[str, Any]) -> str:
    cls = _p(profile, "bf6_class", "Assault")
    inp = _p(profile, "input", "Controller")
    plat = _p(profile, "platform", "PC")
    diff = _p(profile, "difficulty", "Normal")

    return (
        f"ü™ñ BF6 –ö–ª–∞—Å—Å: {cls}\n"
        f"üñ• –ü–ª–∞—Ç—Ñ–æ—Ä–º–∞: {plat}\n"
        f"üéÆ Input: {inp}\n"
        f"üòà Mode: {diff}\n\n"
        "–ö–æ—Ä–æ—Ç–∫–æ –ø–æ —Ä–æ–ª–∏:\n"
        "‚Ä¢ Assault ‚Äî —ç–Ω—Ç—Ä–∏/–¥–∞–≤–ª–µ–Ω–∏–µ, –æ—Ç–∫—Ä—ã–≤–∞–µ—à—å —Ñ–∞–π—Ç—ã\n"
        "‚Ä¢ Recon ‚Äî –∏–Ω—Ñ–∞/—É–≥–ª—ã/–ø–∏–∫–∏, –∏–≥—Ä–∞–µ—à—å –¥–∏—Å—Ç–∞–Ω—Ü–∏—é\n"
        "‚Ä¢ Engineer ‚Äî —É—Ç–∏–ª–∏—Ç–∏/—Ç–µ—Ö–Ω–∏–∫–∞/–∫–æ–Ω—Ç—Ä–æ–ª—å –∑–æ–Ω\n"
        "‚Ä¢ Medic ‚Äî —Ç–µ–º–ø, —Ä–µ—Å—ã, —É–¥–µ—Ä–∂–∞–Ω–∏–µ –∫–æ–º–∞–Ω–¥—ã –∂–∏–≤–æ–π\n\n"
        "–î–∞–ª—å—à–µ: ‚öôÔ∏è –ù–∞—Å—Ç—Ä–æ–π–∫–∏ ‚Üí üß© –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –∏–≥—Ä—ã ‚Üí BF6 –ø—É–Ω–∫—Ç—ã"
    )


def bf6_aim_sens_text(profile: Dict[str, Any]) -> str:
    inp = _p(profile, "input", "Controller")
    if inp.upper() == "KBM":
        return (
            "üéØ BF6 Aim/Sens (KBM)\n\n"
            "–ë–∞–∑–∞:\n"
            "‚Ä¢ DPI: 800 (–∏–ª–∏ 1600) ‚Äî —Å—Ç–∞–±–∏–ª—å–Ω–æ\n"
            "‚Ä¢ In-game sens: –ø–æ–¥ –∫–æ–Ω—Ç—Ä–æ–ª—å, –±–µ–∑ –¥–µ—Ä–≥–æ—Ç–Ω–∏\n"
            "‚Ä¢ ADS multiplier: 1.0 (—Å—Ç–∞—Ä—Ç)\n"
            "‚Ä¢ FOV: 95‚Äì105 (–∫–æ–º—Ñ–æ—Ä—Ç)\n\n"
            "–¢–µ—Å—Ç:\n"
            "1) 5 –º–∏–Ω—É—Ç —Ç—Ä–µ–∫–∏–Ω–≥ –ø–æ –±–æ—Ç–∞–º\n"
            "2) 5 –º–∏–Ω—É—Ç –º–∏–∫—Ä–æ—Ñ–ª–∏–∫–∏\n"
            "–ï—Å–ª–∏ —Å—Ä—ã–≤–∞–µ—Ç –∫–æ–Ω—Ç—Ä–æ–ª—å ‚Äî —Å–Ω–∏–∂–∞–π sens –Ω–∞ 5‚Äì10%."
        )

    return (
        "üéØ BF6 Aim/Sens (Controller)\n\n"
        "–ë–∞–∑–∞:\n"
        "‚Ä¢ Sens: —Å—Ä–µ–¥–Ω—è—è/–≤—ã—Å–æ–∫–∞—è –±–µ–∑ ‚Äú–º—ã–ª–∞‚Äù\n"
        "‚Ä¢ ADS sens: —á—É—Ç—å –Ω–∏–∂–µ –±–∞–∑–æ–≤–æ–π\n"
        "‚Ä¢ Response curve: linear/standard ‚Äî —á—Ç–æ —Å—Ç–∞–±–∏–ª—å–Ω–µ–µ\n"
        "‚Ä¢ Deadzone: –º–∏–Ω–∏–º–∞–ª—å–Ω–∞—è –±–µ–∑ –¥—Ä–∏—Ñ—Ç–∞\n\n"
        "–ü—Ä–∞–≤–∏–ª–æ:\n"
        "–ï—Å–ª–∏ –ø–µ—Ä–µ–ª–µ—Ç–∞–µ—à—å —Ü–µ–ª—å ‚Äî —Å–Ω–∏–∂–∞–π ADS –Ω–∞ 0.05‚Äì0.10.\n"
        "–ï—Å–ª–∏ –Ω–µ –¥–æ–≤–æ–¥–∏—à—å ‚Äî —Å–ª–µ–≥–∫–∞ –ø–æ–¥–Ω–∏–º–∏ ADS –∏–ª–∏ —Å–Ω–∏–∑—å deadzone."
    )


